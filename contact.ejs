<!-- contact section-->
<section id="contact">
    <div class="container mt-5 contactContent">
        <h1 class="text-center mb-4" style="color: #2E3338;">Professional Contact Me</h1>
  
        <div class="row mt-4">
            <div class="col-lg-12">
                <form action="#" method="post" style="background-color: #F6F5F3; padding: 30px; border-radius: 10px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);">
                    <div class="form-group">
                        <label for="name" style="color: #85817D;">Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Enter your name" style="border-radius: 8px;">
                    </div>
                    <div class="form-group">
                        <label for="email" style="color: #85817D;">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="Enter your email" style="border-radius: 8px;">
                    </div>
                    <div class="form-group">
                        <label for="subject" style="color: #85817D;">Subject</label>
                        <input type="text" class="form-control" id="subject" placeholder="Subject" style="border-radius: 8px;">
                    </div>
                    <div class="form-group">
                        <label for="details" style="color: #85817D;">Project Details</label>
                        <textarea class="form-control" id="details" rows="4" placeholder="Describe your project" style="border-radius: 8px;"></textarea>
                    </div>
                    <button type="submit" class="btn" style="background-color: #6A8D92; color: white; border-radius: 8px;">Contact Me</button>
                </form>
            </div>
        </div>
    </div>
</section>
  
